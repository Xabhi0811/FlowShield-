{
  "manifest_version": 3,
  "name": "MERN Productivity Tracker",
  "version": "1.0.0",
  "description": "Track time on sites, block distractions, and sync across devices.",
  "action": {
    "default_popup": "dist/index.html"
  },
  "permissions": ["tabs", "storage", "alarms", "activeTab", "scripting", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentScript.js"]
    }
  ]
}
